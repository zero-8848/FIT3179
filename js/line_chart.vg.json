{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Yearly Death Rate Trend for Australia",
  "width": 800,
  "height": 618,
  "autosize": "fit",
  "data": {
    "url": "https://raw.githubusercontent.com/zero-8848/FIT3179/main/data/cleaned_who_road_deaths.csv"
  },
  "transform": [
    {
      "filter": "datum.Country === 'Australia'"
    }
  ],
  "mark": {
    "type": "line",
    "point": {
        "filled": true,
        "size": 100
    },
    "strokeWidth": 3
},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "DeathRate_BothSexes",
      "type": "quantitative",
      "title": "Death Rate"
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "ordinal"
      },
      {
        "title":"Death Rate (per 100k ppl.)",
        "field": "DeathRate_BothSexes",
        "type": "quantitative"
      }
    ],
    "opacity": {
      "condition": {
        "test": "datum.DeathRate_BothSexes !== null",
        "value": 1
      },
      "value": 0.1
    }
  }
}