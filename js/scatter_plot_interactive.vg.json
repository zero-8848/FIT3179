{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/zero-8848/FIT3179/main/data/cleaned_who_road_deaths.csv"
  },
  "params": [
    {
      "name": "Year_Filter",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2019,
        "step": 1,
        "name": "Filter by Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Deaths_BothSexes > 1"
    },
    {
      "filter": "datum.population_density > 0"
    },
    {
      "filter": "datum.Year == Year_Filter"
    }
  ],
  "encoding": {
    "x": {
      "field": "DeathRate_BothSexes",
      "type": "quantitative",
      "title": "Death Rate (Both Sexes)",
      "scale": {
        "domain": [
          0,
          50
        ]
      },
      "axis": {
        "tickCount": 5
      }
    },
    "y": {
      "field": "population_density",
      "type": "quantitative",
      "title": "Population Density",
      "scale": {
        "type": "log",
        "domain": [
          1,
          10000
        ],
        "base": 10
      },
      "axis": {
        "values": [
          1,
          10,
          100,
          1000,
          10000
        ],
        "grid": true
      }
    },
    "tooltip": [
      {
        "field": "Country",
        "type": "nominal"
      },
      {
        "field": "DeathRate_BothSexes",
        "type": "quantitative",
        "format": ".2f",
        "title": "Death Rate"
      },
      {
        "field": "population_density",
        "type": "quantitative",
        "format": ".2f",
        "title": "Population Density"
      },
      {
        "field": "Year",
        "type": "quantitative"
      }
    ]
  },
  "layer": [
    {
      "mark": "point"
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 60,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "DeathRate_BothSexes",
          "type": "quantitative"
        },
        "y": {
          "field": "population_density",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Singapore' || datum['Country'] == 'Rwanda'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}