{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Death Rate by Continent (2018)",
  "data": {
    "url": "https://raw.githubusercontent.com/zero-8848/FIT3179/main/data/cleaned_who_road_deaths.csv"
  },
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zero-8848/FIT3179A2/main/js/ne_110m_admin_0_countries.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "key": "properties.SOVEREIGNT",
        "fields": ["properties.CONTINENT"]
      }
    },
    {
      "filter": "datum.Year == 2018"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Deaths_BothSexes",
          "as": "totalDeaths"
        },
        {
          "op": "mean",
          "field": "DeathRate_BothSexes",
          "as": "avgDeathRate"
        }
      ],
      "groupby": ["properties.CONTINENT"]
    },
    {
      "calculate": "datum.totalDeaths / sum(datum.totalDeaths)",
      "as": "percentageDeaths"
    }
  ],
  "mark": {
    "type": "line",
    "tooltip": true,
    "strokeWidth": 2
  },
  "encoding": {
    "theta": {
      "field": "percentageDeaths",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "avgDeathRate",
      "type": "quantitative"
    },
    "color": {
      "field": "properties.CONTINENT",
      "type": "nominal",
      "legend": {
        "title": "Continent"
      }
    },
    "tooltip": [
      {
        "field": "properties.CONTINENT",
        "type": "nominal",
        "title": "Continent"
      },
      {
        "field": "avgDeathRate",
        "type": "quantitative",
        "title": "Average Death Rate"
      },
      {
        "field": "percentageDeaths",
        "type": "quantitative",
        "title": "Percentage of Deaths"
      }
    ],
    "opacity": {
      "condition": {
        "test": "datum.avgDeathRate !== null",
        "value": 1
      },
      "value": 0.1
    }
  }
}
