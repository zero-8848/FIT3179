{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 618,
  "autosize": "fit",
  "title": "Average Death Rate by Continent (2018)",
  "data": {
    "url": "https://raw.githubusercontent.com/zero-8848/FIT3179/main/data/cleaned_who_road_deaths.csv"
  },
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zero-8848/FIT3179/main/js/ne_110m_admin_0_countries.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "key": "properties.SOVEREIGNT",
        "fields": [
          "properties.CONTINENT"
        ]
      }
    },
    {
      "filter": "datum.Year == 2018"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "DeathRate_BothSexes",
          "as": "avgDeathRate"
        },
        {
          "op": "sum",
          "field": "Deaths_BothSexes",
          "as": "totalDeathContinent"
        }
      ],
      "groupby": [
        "properties.CONTINENT"
      ]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 20,
        "stroke": "#fff"
      }
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 10
      },
      "encoding": {
        "text": {
          "field": "avgDeathRate",
          "type": "quantitative"
        }
      }
    }
  ],
  "encoding": {
    "theta": {
      "field": "totalDeathContinent",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "avgDeathRate",
      "scale": {
        "type": "sqrt",
        "zero": true,
        "rangeMin": 20
      }
    },
    "color": {
      "field": "properties.CONTINENT",
      "type": "nominal",
      "legend": {
        "title": "Continent"
      }
    }
  }
}