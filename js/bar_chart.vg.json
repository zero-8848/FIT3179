{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 10 Countries by Death Rate: Male vs. Female",
    "data": {
      "url": "https://raw.githubusercontent.com/zero-8848/FIT3179A2/main/data/cleaned_who_road_deaths.csv"
    },
    "params": [
      {
        "name": "selectedYear",
        "value": 2019,
        "bind": {
          "input": "select",
          "options": [2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019],
          "name": "Select Year"
        }
      }
    ],
    "transform": [
      {"filter": "datum.Year == selectedYear"},
      {"sort": [{"field": "DeathRate_Male", "order": "descending"}]},
      {"window": [{"op": "row_number", "as": "rank"}]},
      {"filter": "datum.rank <= 10"}
    ],
    "facet": {
      "column": {
        "field": "variable",
        "type": "nominal",
        "header": {"title": "Gender"}
      }
    },
    "spec": {
      "mark": "bar",
      "encoding": {
        "x": {"field": "Country", "type": "nominal", "axis": {"title": "Country"}},
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {"title": "Death Rate"}
        },
        "color": {
          "field": "variable",
          "type": "nominal",
          "legend": null
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "DeathRate_Male", "type": "quantitative"},
          {"field": "DeathRate_Female", "type": "quantitative"}
        ]
      }
    }
  }
  